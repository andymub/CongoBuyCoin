                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/btn_login_bg"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txtV72"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/btn_login_bg"
                            android:textSize="12sp" />

